<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="@dimen/brush_thickness_dialog_width"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <SeekBar
            android:id="@+id/brush_thickness_dialog_seekbar"
            style="@style/SeekBarStyle" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="bottom"
            android:orientation="horizontal">

            <com.khurkham.taipaint.CustomTextView
                android:id="@+id/brush_thickness_dialog_thickness_from"
                android:layout_width="wrap_content"
                app:font="arial.ttf"
                android:layout_height="48dp"
                android:layout_marginLeft="5dp"
                android:gravity="center" />

            <com.khurkham.taipaint.CustomTextView
                android:id="@+id/brush_thickness_dialog_thickness_to"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                app:font="arial.ttf"
                android:layout_marginLeft="10dp"
                android:gravity="center" />

            <Space
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <include layout="@layout/done_cancel_buttons" />

        </LinearLayout>
    </LinearLayout>
</FrameLayout>